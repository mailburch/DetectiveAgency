@model DetectiveAgency.Models.Employee
@{
    ViewBag.Title = "Calculate Pay";
}

<h1>Calculate Pay</h1>

<form asp-action="CalcPay" method="post" class="col-6">
    <div asp-validation-summary="All" class="text-danger mb-3"></div>

    <div class="mb-3">
        <label asp-for="Rate" class="form-label">Hourly Rate</label>
        <input asp-for="Rate" class="form-control" />
        <span asp-validation-for="Rate" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Hours" class="form-label">Hours</label>
        <input asp-for="Hours" class="form-control" />
        <span asp-validation-for="Hours" class="text-danger"></span>
    </div>

    <div class="d-flex gap-2">
        <button type="submit" class="btn btn-primary">Calculate</button>
        <button type="submit" asp-controller="Home" asp-action="Index" formmethod="get" class="btn btn-secondary">Clear</button>
    </div>

    @* show result only if controller set Salary *@
    @if (ViewBag?.Salary is decimal pay)
    {
        <div class="alert alert-success mt-3">
            Salary: @pay.ToString("C2")
        </div>
    }
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
